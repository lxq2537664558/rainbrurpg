		-L/usr/cross/lib				\
		-I/usr/cross/include/glib-2.0			\
		-I/usr/cross/include/sigc++-2.0/		\
		-I/usr/cross/include/gnet/			\
		-I/usr/cross/include/OGRE/			\
		-I/usr/cross/include/CEGUI/


librainbrurpg_core.adir=.

h_sources=gameengine.h			\
	  gamestate.h			\
	  guimanager.h			\
	  velocitycalculator.h		\
	  vcconstant.h			\
	  gsmenubase.h			\
	  inputwrapper.h		\
	  inputmanager.h		\
	  gsmainmenu.h			\
	  gslocaltest.h			\

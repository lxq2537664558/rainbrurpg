	  gsgamebase.h			\
	  environmentsetup.h		\
	  highlightlistener.h		\
	  gsconnection.h		\
	  keyboardnavigation.h		\
	  dialogsystem.h		\
	  messagebox.h			\
	  gscreateaccount.h		\
	  gsserverlist.h		\
	  gsupdatedatafiles.h

cc_sources=gameengine.cpp		\
	  gamestate.cpp			\
	  guimanager.cpp		\
	  velocitycalculator.cpp	\
	  vcconstant.cpp		\
	  gsmenubase.cpp		\
	  inputwrapper.cpp		\
	  inputmanager.cpp		\
	  gsmainmenu.cpp		\

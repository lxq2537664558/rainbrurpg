LD_USER_FLAGS = $(SHARED_FLAG) -version-info				\
	        $(GENERIC_LIBRARY_VERSION)				\
		-L$(top_srcdir)/common/.libs 				\
		-Wl,--rpath -Wl,$(top_srcdir)/common/.libs 

library_includedir=$(includedir)/$(GENERIC_LIBRARY_NAME)/$(LIB_CORE_NAME)
library_include_HEADERS = $(h_sources)

librainbrurpg_core_a_SOURCES= $(h_sources) $(cc_sources)
librainbrurpg_core_a_INCLUDES= $(LD_USER_FLAGS)
librainbrurpg_core_a_LIBADD= -lrainbrurpg-common 
